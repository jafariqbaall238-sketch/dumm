<script>
  
  
  
   // üéØ Product-specific codes and discount values
const discountCodes = {
  &quot;Apple Airbuds Pro 2 Gen&quot;: &quot;ShopInto12&quot;,
  &quot;Air 31 Black High Quality&quot;: &quot;AIR50&quot;
};

const discountAmounts = {
  &quot;Apple Airbuds Pro 2 Gen&quot;: 100,
  &quot;Air 31 Black High Quality&quot;: 50
};

let codeAlreadyUsed = false;

function applyDiscount() {
  const title = document.getElementById(&quot;productTitle&quot;).innerText;
  const enteredCode = document.getElementById(&quot;discountCode&quot;).value.trim();
  const msgBox = document.getElementById(&quot;discountMessage&quot;);
  const validCode = discountCodes[title];
  const discountAmount = discountAmounts[title];
  const priceEl = document.getElementById(&quot;productPrice&quot;);

  msgBox.style.opacity = 1;
  msgBox.style.transition = &quot;all 0.4s ease&quot;;

  if (codeAlreadyUsed) {
    msgBox.innerHTML = &quot;&#9888;&#65039; Code already used! Contact Shop Into for a new code.&quot;;
    msgBox.style.color = &quot;orange&quot;;
    animateMessage(msgBox);
    return;
  }

  if (enteredCode === validCode) {
    let currentPrice = parseInt(priceEl.innerText.replace(&quot;Rs. &quot;, &quot;&quot;));
    let newPrice = currentPrice - discountAmount;
    priceEl.innerText = &quot;Rs. &quot; + newPrice;
    msgBox.innerHTML = &quot;&#9989; Rs. &quot; + discountAmount + &quot; discount applied!&quot;;
    msgBox.style.color = &quot;green&quot;;
    animateMessage(msgBox);
    codeAlreadyUsed = true;
  } else {
    msgBox.innerHTML = &quot;&#10060; Invalid code. Please try again or contact Shop Into.&quot;;
    msgBox.style.color = &quot;red&quot;;
    animateMessage(msgBox);
  }
}

function animateMessage(element) {
  element.style.opacity = 0;
  setTimeout(() =&gt; {
    element.style.opacity = 1;
  }, 200);
}
  
  
  

 function showDetail(card) {
    const title = card.getAttribute(&quot;data-name&quot;);
    const desc = card.getAttribute(&quot;data-description&quot;);
    const images = JSON.parse(card.getAttribute(&quot;data-images&quot;));
    const price = card.getAttribute(&quot;data-price&quot;);
    const original = card.getAttribute(&quot;data-original&quot;);
    const encodedReviewHtml = card.getAttribute(&quot;data-reviews-html&quot;);
    const encodedCustomerReviews = card.getAttribute(&quot;data-customer-reviews-html&quot;);
  
    // Switch pages
    document.getElementById(&quot;homePage&quot;).style.display = &quot;none&quot;;
    document.getElementById(&quot;productDetail&quot;).style.display = &quot;block&quot;;
    document.getElementById(&quot;reviewSummary&quot;).innerHTML = decodeHtmlEntities(encodedReviewHtml || &quot;&quot;);
    document.getElementById(&quot;customerReviews&quot;).innerHTML = decodeHtmlEntities(encodedCustomerReviews || &quot;&quot;);

    // Update content
    document.getElementById(&quot;productTitle&quot;).innerText = title;
    document.getElementById(&quot;productDesc&quot;).innerText = desc;
    document.getElementById(&quot;productImg&quot;).src = images[0];
    document.getElementById(&quot;productPrice&quot;).innerText = &quot;Rs. &quot; + price;
    document.getElementById(&quot;productOriginalPrice&quot;).innerText = &quot;Rs. &quot; + original;

    // Gallery images
    const gallery = document.getElementById(&quot;imageGallery&quot;);
    gallery.innerHTML = &quot;&quot;;
    images.forEach((img) =&gt; {
      const thumb = document.createElement(&quot;img&quot;);
      thumb.src = img;
      thumb.style.width = &quot;80px&quot;;
      thumb.style.height = &quot;80px&quot;;
      thumb.style.margin = &quot;5px&quot;;
      thumb.style.objectFit = &quot;cover&quot;;
      thumb.style.borderRadius = &quot;5px&quot;;
      thumb.style.cursor = &quot;pointer&quot;;
      thumb.onclick = () =&gt; {
        document.getElementById(&quot;productImg&quot;).src = img;
      };
      gallery.appendChild(thumb);
    });

    loadComment();
  }


  function backToHome() {
    document.getElementById(&quot;productDetail&quot;).style.display = &quot;none&quot;;
    document.getElementById(&quot;homePage&quot;).style.display = &quot;block&quot;;
  }

  function submitOrder() {
    const name = document.getElementById(&quot;firstName&quot;).value + &#39; &#39; + document.getElementById(&quot;lastName&quot;).value;
    const address = document.getElementById(&quot;address&quot;).value;
    const city = document.getElementById(&quot;city&quot;).value;
    const postal = document.getElementById(&quot;postal&quot;).value;
    const phone = document.getElementById(&quot;phone&quot;).value;
    const shipping = document.getElementById(&quot;shipping&quot;).value;

    const msg = `*Shop Into Order*%0AName: ${name}%0AAddress: ${address}, ${city}, ${postal}%0APhone: ${phone}%0AShipping: ${shipping}%0A&#9888;&#65039; Delivery charges must be paid first.`;

    window.open(&quot;https://wa.me/923375565829?text=&quot; + msg, &quot;_blank&quot;);
  }

  
  
  
  

  function filterProducts() {
    let input = document.getElementById(&quot;searchInput&quot;).value.toLowerCase();
    let products = document.querySelectorAll(&quot;.product-card&quot;);
    products.forEach((card) =&gt; {
      let name = card.getAttribute(&quot;data-name&quot;).toLowerCase();
      card.style.display = name.includes(input) ? &quot;block&quot; : &quot;none&quot;;
    });
  }
 
  function openShippingPolicy() {
    // Hide all main sections
    document.getElementById(&quot;homePage&quot;).style.display = &quot;none&quot;;
    document.getElementById(&quot;productDetail&quot;).style.display = &quot;none&quot;;
    
    // Show Shipping Policy
    document.getElementById(&quot;shippingPolicy&quot;).style.display = &quot;block&quot;;
  }
  
  function toggleSection(sectionId) {
    var el = document.getElementById(sectionId);
    if (el.style.display === &quot;none&quot; || el.style.display === &quot;&quot;) {
      el.style.display = &quot;block&quot;;
    } else {
      el.style.display = &quot;none&quot;;
    }

    // Optionally hide other sections if needed
    // document.getElementById(&quot;otherSection&quot;).style.display = &quot;none&quot;;
  }

  function decodeHtmlEntities(encodedStr) {
  const txt = document.createElement(&#39;textarea&#39;);
  txt.innerHTML = encodedStr;
  return txt.value;
}
  
  
  
  // Get the button
let mybutton = document.getElementById(&quot;backToTopBtn&quot;);

// Show button after scrolling down 200px
window.onscroll = function() {
  if (document.body.scrollTop &gt; 200 || document.documentElement.scrollTop &gt; 200) {
    mybutton.style.display = &quot;block&quot;;
  } else {
    mybutton.style.display = &quot;none&quot;;
  }
};

// When user clicks the button, scroll to top smoothly
mybutton.onclick = function() {
  window.scrollTo({ top: 0, behavior: &#39;smooth&#39; });
};

  
  
  
  
  

</script>
